class Solution:
    def kthSmallest(self,arr, l, r, k):
        '''
        arr : given array
        l : starting index of the array i.e 0
        r : ending index of the array i.e size-1
        k : find kth smallest element and return using this function
        '''
        arr.sort()
        i=0
        while i<len(arr):
            while i<n-1 and arr[i]==arr[i+1]:
                i+=1
            
            k-=1
            
            if k==0:
                break
            i+=1
            
        return arr[i]
